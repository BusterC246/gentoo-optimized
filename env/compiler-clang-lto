source /etc/portage/env/compiler-clang

WARNING_FLAGS="-Werror=odr -Werror=strict-aliasing"

COMMON_FLAGS="${COMMON_FLAGS} -flto=auto ${WARNING_FLAGS}"
CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
FCFLAGS="${COMMON_FLAGS}"
FFLAGS="${COMMON_FLAGS}"
LDFLAGS="${LDFLAGS}"

CGO_CFLAGS="${COMMON_FLAGS}"
CGO_CXXFLAGS="${COMMON_FLAGS}"
CGO_FFLAGS="${COMMON_FLAGS}"
CGO_LDFLAGS="${LDFLAGS}"

RUSTFLAGS="${RUSTFLAGS}"

